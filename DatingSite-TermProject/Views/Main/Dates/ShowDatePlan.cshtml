@model DatingSite_TermProject.Models.DatePlanModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Plan Date - MatchUp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/update.css" rel="stylesheet" type="text/css" />
    <link href="~/css/main.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <div class="navbar">
        <!-- Navbar content -->
    </div>

    <div class="container">
        <h3>Date Plan Details</h3>
        <div class="row">
            <div class="col-md-6">
                <h4>Date and Location</h4>
                <p><strong>Date:</strong> @Model.GetFullDateTime()</p>
                <p><strong>Location:</strong> @Model.Location</p>
                <p><strong>Description:</strong> @Model.Description</p>
                <!-- Embedding Google Map based on location -->
                <iframe width="100%" height="300"
                        style="border:0"
                        loading="lazy"
                        allowfullscreen
                        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyD5Zq_-OdrLWo4Wm8Qy0gaefwYNnI2_Mms&q=@Uri.EscapeDataString(Model.Location)">
                </iframe>
            </div>
            <div class="col-md-6">
                <h4>Profiles</h4>
                <!-- Profile 1 -->
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@Model.YourProfile.FirstName @Model.YourProfile.LastName</h5>
                        <!-- Include other profile details -->
                        <p>Age: @Model.YourProfile.Age</p>
                        <p>City: @Model.YourProfile.City</p>
                        <!-- Add more profile details as needed -->
                    </div>
                </div>
                <br />
                <!-- Profile 2 -->
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@Model.OtherProfile.FirstName @Model.OtherProfile.LastName</h5>
                        <!-- Include other profile details -->
                        <p>Age: @Model.OtherProfile.Age</p>
                        <p>City: @Model.OtherProfile.City</p>
                        <!-- Add more profile details as needed -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <p>2024 MatchUp by Abhijay & Johnson</p>
    </footer>
</body>
</html>
