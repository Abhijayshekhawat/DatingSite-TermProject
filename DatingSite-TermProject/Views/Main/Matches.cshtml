@{
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Matches - MatchUp</title>
    <link href="~/css/update.css" rel="stylesheet" type="text/css" />
    <link href="~/css/main.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="navbar">
        <div class="navbar-left">
            <img src="~/css/logo.png" alt="Logo" class="logo" />
            <nav>
                <a asp-controller="Dashboard" asp-action="Dashboard" class="active">Dashboard</a>
                <a asp-controller="Matches" asp-action="Matches">Matches</a>
                <a asp-controller="Likes" asp-action="Likes">Likes</a>
                <a asp-controller="Dates" asp-action="Dates">Dates</a>
                <a asp-controller="DatePlanning" asp-action="DatePlanning">Plan Date</a>
                <a asp-controller="Profile" asp-action="Profile">Edit Profile</a>
            </nav>
        </div>
        <div class="navbar-right">
            <span class="user-name">Welcome First Name</span> <!-- Example of displaying user name -->
            <img src="~/css/Logo.png" alt="User Image" class="user-img" />
            <form>
                <button type="submit" class="logout-button">Logout</button>
            </form>
        </div>
    </div>
    <div class="content-wrapper">
        <header>
            <h1>Matches</h1>
            <h3>@ViewBag.Status</h3>
        </header>
        <div class="dashboard-layout">
            <div class="cards-container">
                <h2 class="likes-title">People you're Matched With</h2>
                <div class="container">
                    <div class="card">
                        <img src="~/css/logo.png" alt="Profile Image">
                        <div class="card-body">
                            <h5 class="card-title">FirstName</h5>
                            <p class="card-text">Description</p>
                            <p class="card-text">City, State</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <p>2024 MatchUp by Abhijay & Johnson</p>
    </footer>
</body>
</html>
