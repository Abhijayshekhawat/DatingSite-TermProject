@using DatingSite_TermProject.Models
@model List<CardsModel>



@{
    Layout = null; // Assuming you don't want to use a layout page
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Dashboard-MatchUp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/update.css" rel="stylesheet" type="text/css" />
    <link href="~/css/main.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    

</head>
<body>
    <style>
    .profile-gallery-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 10px;
        margin-top: 20px;
    }
    .profile-gallery-container img {
        width: 100%;
        border-radius: 8px;
        transition: transform 0.5s ease, box-shadow 0.5s ease;
    }
    .profile-gallery-container img:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 8px rgba(0,0,0,0.5);
    }
    .profile-image {
        grid-column: span 2; /* Makes the profile image larger */
        object-fit: cover;
    }
    .modal-content {
        background: #f8f9fa; /* Light background for the modal content */
        border-radius: 15px; /* Rounded borders for the modal */
    }
    .modal-header {
        border-bottom: none; /* Removes the border from the modal header */
    }
    .modal-footer {
        border-top: none; /* Removes the border from the modal footer */
    }
    .btn-close {
        background-color: #ccc; /* Styles the close button */
        border-radius: 50%;
    }
    .btn-secondary {
        border-color: #6c757d;
    }
</style>
    <div class="navbar">
        <div class="navbar-left">
            <img src="~/css/logo.png" alt="Logo" class="logo" />
            <nav>
                <a asp-controller="Dashboard" asp-action="Dashboard" class="active">Dashboard</a>
                <a asp-controller="Matches" asp-action="Matches">Matches</a>
                <a asp-controller="Likes" asp-action="Likes">Likes</a>
                <a asp-controller="Dates" asp-action="Dates">Dates</a>
                <a asp-controller="DatePlanning" asp-action="DatePlanning">Plan Date</a>
                <a asp-controller="Profile" asp-action="Profile">Edit Profile</a>
            </nav>
        </div>
        <div class="navbar-right">
            <span class="user-name">Welcome @ViewBag.FirstName</span> 
            <img src="@ViewBag.ProfileImage" alt="User Image" class="user-img" />
            <form asp-controller ="Account" asp-action="Logout" method="post">
                <button type="submit" class="logout-button">Logout</button>
            </form>
        </div>
    </div>
    <div class="content-wrapper">
        <header>
            <h1>Dashboard</h1>
            <h3>
                <!-- Display some status from the model -->
            </h3>
        </header>
        <div class="dashboard-layout">
            <div class="filters-wrapper">
                <div class="filters-section">
                    <h2>Filters</h2>
                    <!-- Filters form -->
                    <form asp-controller="Dashboard" asp-action="FilterAction" method="post">
                        <label for="lessThanAge">Age under:</label>
                        <input type="text" id="lessThanAge" name="lessThanAge" class="form-control" />

                        <label for="filterCity">City:</label>
                        <input type="text" id="filterCity" name="filterCity" class="form-control" />

                        <label for="filterState">State:</label>
                        <select id="filterState" name="filterState" class="form-control">
                            @foreach (var state in ViewBag.States as List<string>)
                            {
                                <option value="@state">@state</option>
                            }
                        </select>

                        <label for="filterOccupation">Occupation:</label>
                        <input type="text" id="filterOccupation" name="filterOccupation" class="form-control" />

                        <label for="chkInterests"><strong>Your Interests:</strong></label>
                        <div class="checkbox-container">
                            @foreach (var interest in ViewBag.Interests as List<string>)
                            {
                                <input type="checkbox" id="interest_@interest" name="interests" value="@interest">
                                <label for="interest_@interest">@interest</label>
                                <br />
                            }
                        </div>

                        <label for="filterCommitmentType">Commitment Type:</label>
                        <select id="filterCommitmentType" name="filterCommitmentType" class="form-control">
                            @foreach (var Commitment in ViewBag.Commitments as List<string>)
                            {
                                <option value="@Commitment">@Commitment</option>
                            }
                        </select>

                        <button type="submit" class="btn btn-primary">Apply Filters</button>
                       
                    </form>
                    <form asp-controller="Dashboard" asp-action="ResetFilters" method="post">
                        <button type="submit" class="btn btn-secondary">Reset Filters</button>
                    </form>

                </div>
            </div>
            <div class="cards-container">
                <div class="container">
                    @foreach (CardsModel cards in Model)
                    {
                        <div class="card">
                            <img src= @cards.ProfilePhotoURL alt="Profile Image">
                            <div class="card-body">
                                <h5 class="card-title">@cards.FirstName, @cards.LastName</h5>
                                <p class="card-text">@cards.Tagline</p>
                                <p class="card-text">@cards.City,@cards.State</p>
                                <button type="button" class="btn btn-secondary btn-show-profile"
                                        data-bs-toggle="modal" data-bs-target="#detailModal" data-name="@cards.FirstName @cards.LastName"
                                        data-description="@cards.Tagline" data-city="@cards.City" data-state="@cards.State">
                                    Show Profile
                                </button>
                                <button type="button" class="btn btn-primary">Like</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
    </div>
        <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalLabel">Profile Details</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTk1wr1yrOBQiwirwFdBeIUAeIU9vPg09-NpaXWEipuyQ&s" alt="Profile Photo" class="img-fluid">
                                <p><strong>Name:</strong> John Doe</p>
                                <p><strong>Age:</strong> 29</p>
                                <p><strong>Height:</strong> 5'11"</p>
                                <p><strong>Weight:</strong> 165 lbs</p>
                                <p><strong>City:</strong> New York</p>
                                <p><strong>State:</strong> NY</p>
                                <p><strong>Occupation:</strong> Software Developer</p>
                                <p><strong>Interests:</strong> Hiking, Reading, Coding</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Tagline:</strong> "Live, Laugh, Code"</p>
                                <p><strong>Favourite Cuisine:</strong> Italian</p>
                                <p><strong>Favourite Quote:</strong> "To be or not to be"</p>
                                <p><strong>Goals:</strong> To develop a revolutionary app</p>
                                <p><strong>Commitment Type:</strong> Long-term</p>
                                <p><strong>Biography:</strong> Lorem ipsum dolor sit amet, consectetur adipiscing elit...</p>
                            </div>
                        </div>
                        <div class="profile-gallery-container">
                            <!-- Profile image styled differently -->
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTk1wr1yrOBQiwirwFdBeIUAeIU9vPg09-NpaXWEipuyQ&s" alt="Profile Photo" class="profile-image img-fluid">
                            <!-- Image gallery -->
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTk1wr1yrOBQiwirwFdBeIUAeIU9vPg09-NpaXWEipuyQ&s" alt="Gallery Image 1" class="img-fluid">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTk1wr1yrOBQiwirwFdBeIUAeIU9vPg09-NpaXWEipuyQ&s" alt="Gallery Image 2" class="img-fluid">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTk1wr1yrOBQiwirwFdBeIUAeIU9vPg09-NpaXWEipuyQ&s" alt="Gallery Image 3" class="img-fluid">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTk1wr1yrOBQiwirwFdBeIUAeIU9vPg09-NpaXWEipuyQ&s" alt="Gallery Image 4" class="img-fluid">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTk1wr1yrOBQiwirwFdBeIUAeIU9vPg09-NpaXWEipuyQ&s" alt="Gallery Image 5" class="img-fluid">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>


        <script>
            document.querySelectorAll('.btn-show-profile').forEach(button => {
                button.addEventListener('click', function () {
                    const name = this.getAttribute('data-name');
                    const description = this.getAttribute('data-description');
                    const city = this.getAttribute('data-city');
                    const state = this.getAttribute('data-state');

                    document.getElementById('modalName').textContent = name;
                    document.getElementById('modalDescription').textContent = description;
                    document.getElementById('modalLocation').textContent = city + ', ' + state;
                });
            });
        </script>
    <footer>
        <p>2024 MatchUp by Abhijay & Johnson</p>
    </footer>
</body>
</html>
