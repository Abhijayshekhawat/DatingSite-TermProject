@model DatingSite_TermProject.Models.ProfileImageModel

@{
    Layout = null; // Assuming you don't want to use a layout page
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Build your Profile</title>
    <link href="~/css/update.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="navbar">
        <div class="navbar-left">
            <img src="~/css/logo.png" alt="Logo" class="logo" />
            <nav>
                <a href="#">Dashboard</a>
                <a href="#">Matches</a>
                <a href="#">Likes</a>
                <a href="#">Dates</a>
                <a href="#">Plan Date</a>
                <a href="#" class="active">Edit Profile</a>
            </nav>
        </div>
        <div class="navbar-right">
            <label class="user-name"></label>
            <button class="logout-button">Logout</button>
        </div>
    </div>
    <div class="content-wrapper">
        <header>
            <h1>Build Your Profile 2/3 </h1>
        </header>
        <!-- Start of the form -->
        <form asp-controller="Profile" asp-action="Profile" method="post">
            <div class="form-section">
                <h2>Additional Images</h2>
                <h4>Add additional images to your profile.</h4>

                <!-- Images fields-->
                <label asp-for="AddImage1">Additional Photo 1 URL:</label>
                <input asp-for="AddImage1" name="AddImage1" placeholder="Please enter a valid image URL." class="form-control" />
                <span asp-validation-for="AddImage1" class="text-danger"></span>

                <label asp-for="AddImage2">Additional Photo 2 URL:</label>
                <input asp-for="AddImage2" name="AddImage2 placeholder="Please enter a valid image URL." class="form-control" />
                <span asp-validation-for="AddImage2" class="text-danger"></span>

                <label asp-for="AddImage3">Additional Photo 3 URL:</label>
                <input asp-for="AddImage3" name="AddImage3" placeholder="Please enter a valid image URL." class="form-control" />
                <span asp-validation-for="AddImage3" class="text-danger"></span>

                <label asp-for="AddImage4">Additional Photo 4 URL:</label>
                <input asp-for="AddImage4" name="AddImage4" placeholder="Please enter a valid image URL." class="form-control" />
                <span asp-validation-for="AddImage4" class="text-danger"></span>

                <label asp-for="AddImage5">Additional Photo 5 URL:</label>
                <input asp-for="AddImage5" name="AddImage5" placeholder="Please enter a valid image URL." class="form-control" />
                <span asp-validation-for="AddImage5" class="text-danger"></span>

            </div>
            <div class="button-container">
                <button type="submit" class="btn btn-primary">Save Profile</button>
            </div>
        </form>
    </div>
    <footer>
        <p>2024 MatchUp by Abhijay Shekhawat.</p>
    </footer>
</body>
</html>
