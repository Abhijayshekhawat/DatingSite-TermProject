@model DatingSite_TermProject.Models.ProfileImagesModel

@{
    Layout = null; // Assuming you don't want to use a layout page
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Build your Profile</title>
    <link href="~/css/update.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="navbar">
        <div class="navbar-left">
            <img src="~/css/logo.png" alt="Logo" class="logo" />
            <nav>
                <a asp-controller="Dashboard" asp-action="Dashboard" class="active">Dashboard</a>
                <a asp-controller="Matches" asp-action="Matches">Matches</a>
                <a asp-controller="Likes" asp-action="Likes">Likes</a>
                <a asp-controller="Dates" asp-action="Dates">Dates</a>
                <a asp-controller="DatePlanning" asp-action="DatePlanning">Plan Date</a>
                <a asp-controller="Profile" asp-action="Profile">Edit Profile</a>
            </nav>
        </div>
        <div class="navbar-right">
            <label class="user-name"></label>
            <button class="logout-button">Logout</button>
        </div>
    </div>
    <div class="content-wrapper">
        <header>
            <h1>Build Your Profile 2/3 </h1>
        </header>
        <!-- Start of the form -->
        <form asp-controller="ProfileImages" asp-action="ProfileImages" method="post">
            <div class="form-section">
                <h2>Additional Images</h2>
                <h4>Add additional images to your profile.</h4>

                <!-- Images fields-->
                <label asp-for="Image1">Additional Photo 1 URL:</label>
                <input asp-for="Image1" name="Image1" placeholder="Please enter a valid image URL." class="form-control" />
                <span asp-validation-for="Image1" class="text-danger"></span>

                <label asp-for="Image2">Additional Photo 2 URL:</label>
                <input asp-for="Image2" name="Image2" placeholder="Please enter a valid image URL." class="form-control" />
                <span asp-validation-for="Image2" class="text-danger"></span>

                <label asp-for="Image3">Additional Photo 3 URL:</label>
                <input asp-for="Image3" name="Image3" placeholder="Please enter a valid image URL." class="form-control" />
                <span asp-validation-for="Image3" class="text-danger"></span>

                <label asp-for="Image4">Additional Photo 4 URL:</label>
                <input asp-for="Image4" name="Image4" placeholder="Please enter a valid image URL." class="form-control" />
                <span asp-validation-for="Image4" class="text-danger"></span>

                <label asp-for="Image5">Additional Photo 5 URL:</label>
                <input asp-for="Image5" name="Image5" placeholder="Please enter a valid image URL." class="form-control" />
                <span asp-validation-for="Image5" class="text-danger"></span>

            </div>
            <div class="button-container">
                <button type="submit" class="btn btn-primary">Save Profile</button>
                <label name="lblPIError">@ViewBag.ErrorMessage</label>
            </div>
        </form>
    </div>
    <footer>
        <p>2024 MatchUp by Abhijay Shekhawat.</p>
    </footer>
</body>
</html>
