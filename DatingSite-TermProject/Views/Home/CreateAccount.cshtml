
@{
    ViewData["Title"] = "CreateAccount";
}
@{
    Layout = null; // Assuming you don't want to use a layout page
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Welcome to MatchUp</title>
    <link href="~/css/login.css" rel="Stylesheet" type="text/css" />
</head>
<body>
    <div class="leftcontainer">
        <header class="header">
            <img src="~/css/Logo.png" alt="logo" class="logo" />
        </header>
        <div class="form-container">
            <form asp-controller="CreateAccount" asp-action="CreateAccount" method="post">
                <h1>Create a new Account</h1>
                <div class="login-link">
                    <label>Already A Member? </label>
                    <button type="button" class="login" onclick="window.location.href='/Home/Login';">Log In</button>
                </div>
                <div class="input-group">
                    <div class="input__wrapper">
                        <input type="text" name="FirstName" class="form-control input__field" placeholder="" />
                        <label class="input__label">First Name</label>
                    </div>
                    <div class="input__wrapper">
                        <input type="text" name="LastName" class="form-control input__field" placeholder="" />
                        <label class="input__label">Last Name</label>
                    </div>
                    <div class="input__wrapper">
                        <input type="email" name="Email" class="form-control input__field" placeholder="" />
                        <label class="input__label">Email</label>
                    </div>
                    <div class="input__wrapper">
                        <input type="text" name="UserName" class="form-control input__field" placeholder="" />
                        <label class="input__label">User Name</label>
                    </div>
                    <div class="input__wrapper">
                        <input type="password" name="Password" class="form-control input__field" placeholder="" />
                        <label class="input__label">Password</label>
                    </div>
                    <div class="input__wrapper">
                        <input type="password" name="ConfirmPassword" class="form-control input__field" placeholder="" />
                        <label class="input__label">Confirm Password</label>
                    </div>

                </div>
                <button type="submit" class="btn btn-primary">Create account</button>
                <label name="lblCAError">@ViewBag.ErrorMessage</label> <!--lblCAError-->
            </form>
        </div>
    </div>
    <div class="rightcontainer">
    </div>
</body>
</html>
